@page "/dashboard"


<style>
    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
    }

    .container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-top: 50px;
        font-family: "Poppins", sans-serif;
    }

    .card {
        width: 250px;
        background-color: #FAFAFA;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .card-content {
        padding: 16px;
    }

     .card-content p {
        color: black;
        font-size: 15px;
        line-height: 1.3;
        font-weight: bold;
        margin-top: 17px;
        font-size: medium;
     }
     .h3
     {
         text-align: center;
         font-weight: bold;
     }
</style>
<body>
    <h3 class="h3">Dashboard</h3>
    <div class="container">
        <div class="card">
            <div class="card-content">
                <p>Total Amount: @total</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p>Total Income: @totalIncome</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p>Total Expense: @totalExpense</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p>Pending Debts: @pendingDebts</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p>Cleared Debts: @clearedDebts</p>
            </div>
        </div>
    </div>
    
<div style="display:flex; justify-content:space-evenly;">
        <div style="display:flex; justify-content:center; flex-wrap: wrap; padding:20px; border-radius:10px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; margin-top:50px; width:600px;">
            <div class="w-50 mt-5">
                <h4 class="text-center">Top Five Credit Transactions</h4>
                <MudChart ChartType="ChartType.Donut" Width="300px" Height="300px" InputData="@pieData" InputLabels="@pieLabel"></MudChart>
            </div>
        </div>
        <div style="display:flex; justify-content:center; flex-wrap: wrap; padding:20px; border-radius:10px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; margin-top:50px; width:600px;">
            <div class="w-50 mt-5">
                <h4 class="text-center">Top Five Debit Transactions</h4>
                <MudChart ChartType="ChartType.Pie" InputData="@pieDataDebit" InputLabels="@pieLabelDebit" Width="300px" Height="300px" />
            </div>
        </div>
</div>
</body>
<button class="btn btn-lg btn-secondary" @onclick="backHome" style="position: fixed; top: 20px; right: 20px;">
    Back
</button>

