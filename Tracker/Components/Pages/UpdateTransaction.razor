@page "/updatetransaction{transactionId:guid}"

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .form-label {
        color: black;
        font-weight: bold;
    }

    .Login-Section {
        padding: 30px 40px;
        width: 480px;
        background: #FAFAFA;
        color: black;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

        .Login-Section h1 {
            font-size: 36px;
            text-align: center;
            font-weight: 600;
        }

        .Login-Section .input-box {
            width: 100%;
            height: 50px;
            margin: 30px 0;
            position: relative;
            color: white;
        }

    .log-btn {
        width: 50%;
        height: 45px;
        background: white;
        border: none;
        outline: none;
        border-radius: 40px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        cursor: pointer;
        color: black;
        font-weight: 600;
        font-size: larger;
        margin-top: 20px;
        margin-left: 100px;
    }
</style>

<div class="Login-Section">
    <form action="" @onsubmit="UpdateForm">
        <h1>Transactions Form</h1>
        <div class="input-box">
            <label class="form-label">Balance</label>
            <input type="text" class="form-control" @bind="transaction.balance" required>
        </div>
        <div class="input-box">
            <label class="form-label">Source</label>
            <input type="text" class="form-control" @bind="transaction.source" required>
        </div>

        <div class="input-box">
            <label class="form-label">Currency</label>
            <select type="text" class="form-control" @bind="transaction.transactionType" required>
                @foreach (var transaction in Enum.GetValues(typeof(TransactionType)))
                {
                    <option value="@transaction">@transaction</option>
                }
            </select>
        </div>
        <div class="input-box">
            <label class="form-label">Tag</label>
            <select type="text" class="form-control" @bind="transaction.tag" required>
                @foreach (var tag in Enum.GetValues(typeof(Tags)))
                {
                    <option value="@tag">@tag</option>
                }
            </select>
        </div>
        <div class="input-box">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" @bind="transaction.created" required>
        </div>
        <div class="input-box">
            <label class="form-label">Remark</label>
            <input type="text" class="form-control" @bind="transaction.remark" required>
        </div>
        <button type="submit" class="log-btn">Update</button>
    </form>
    <button type="button" class="log-btn" @onclick="backHome">
        Back
    </button>
</div>
